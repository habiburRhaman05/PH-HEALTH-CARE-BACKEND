enum PaymentStatus {
    PENDING
    COMPLETE
}

model Payment {
    id                 String        @id @default(uuid())
    appoitnmentId      String        @unique
    amount             Float
    transactionId      String
    status             PaymentStatus
    paymentGatewayData Json?
    createdAt          DateTime      @default(now())
    updatedAt          DateTime      @updatedAt
    appoitnment        Appointment    @relation(fields: [appoitnmentId], references: [id], onDelete: Cascade)
}
